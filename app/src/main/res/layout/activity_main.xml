<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="one.enix.smsforward.MainActivity">

    <EditText
        android:id="@+id/targetPhoneNumberInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:selectAllOnFocus="true"
        android:hint="@string/target_phone_number_input_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/kill_app_hint_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kill_app_hint_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/targetPhoneNumberInput"/>

    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IMPORTANT: Before using this app, please do understand the purpose of this app and only enter phone numbers that belong to you. Do NOT enter phone numbers of others to avoid potential risk of scam."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kill_app_hint_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
